<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/category_width"
    android:layout_height="@dimen/category_height"
    android:background="@drawable/ic_service_bg"
    android:layout_marginEnd="-24dp"
    android:layout_marginTop="-16dp"
    android:foreground="?selectableItemBackgroundBorderless"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="22dp"
        >

        <ImageView
            android:id="@+id/ivService"
            android:layout_width="@dimen/category_image_width"
            android:layout_height="@dimen/category_image_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/sample_car" />

        <TextView
            android:id="@+id/tvNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextPoppinsNormal12"
            android:textColor="@color/white"
            android:text="@string/new_b"
            android:background="@drawable/shape_text_rounded"
            android:padding="4dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextPoppinsNormal18"
            tools:text="Carwash"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ivService"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvSubTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextPoppinsNormal12"
            tools:text="Carwash"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextPoppinsItalic12"
            tools:text="Carwash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>